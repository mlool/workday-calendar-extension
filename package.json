{
  "name": "my-extension",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.4.2",
    "webextension-polyfill": "^0.10.0"
  },
  "scripts": {
    "build": "esbuild src/content/index.tsx src/background/index.ts --bundle --minify --sourcemap --outdir=./public/build",
    "build-firefox": "yarn run build && cp firefox-manifest.json build/manifest.json",
    "lint": "yarn eslint \"src/**/*.tsx\" \"src/**/*.ts\"",
    "lint-fix": "yarn run lint -- --fix",
    "fmt": "yarn prettier --check \"src/**/*.tsx\" \"src/**/*.css\" \"src/**/*.ts\"",
    "fmt-fix": "yarn prettier --write \"src/**/*.tsx\" \"src/**/*.css\" \"src/**/*.ts\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.0",
    "@eslint/js": "^9.5.0",
    "@types/chrome": "^0.0.268",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "esbuild": "0.23.0",
    "eslint": "9.x",
    "eslint-formatter-unix": "^8.40.0",
    "eslint-plugin-react": "^7.34.2",
    "globals": "^15.6.0",
    "prettier": "2.8.7",
    "typescript-eslint": "^7.13.1"
  }
}
